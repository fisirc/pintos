include Makefile.vars
BUILD_SUBDIRS = $(addprefix build/, $(SUBDIRS))
LN_S = ln -s
MKDIR = mkdir

all: build build/Makefile $(BUILD_SUBDIRS)
	$(MAKE) -C build

$(BUILD_SUBDIRS):
	$(MKDIR) $@
build:
	$(MKDIR) $@
build/Makefile: ../Makefile.build
	$(LN_S) -Xf ../../Makefile.build $@

clean:
	rm -rf build
